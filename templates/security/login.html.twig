{% extends 'base.html.twig' %}

{% block title %}MatchRoom - Connexion{% endblock %}

{% block body %}
<div class="min-h-screen flex items-center justify-center bg-primary-50 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-lg w-full bg-white rounded-lg shadow-xl overflow-hidden">
        <div class="p-8 md:p-12">
                <div class="text-center mb-8">
                    <h2 class="text-3xl font-serif font-bold text-primary-700">Connexion</h2>
                    <p class="mt-2 text-primary-500">Accédez à votre compte MatchRoom</p>
                </div>

                    {% for flash_error in app.flashes('error') %}
                        <div class="bg-red-50 border-l-4 border-red-400 p-4 mb-4 rounded" role="alert">
                            <p class="text-red-700">{{ flash_error }}</p>
                        </div>
                    {% endfor %}

                    {% for flash_success in app.flashes('success') %}
                        <div class="bg-green-50 border-l-4 border-green-400 p-4 mb-4 rounded" role="alert">
                            <p class="text-green-700">{{ flash_success }}</p>
                        </div>
                    {% endfor %}

                    <form method="post" class="space-y-6">
                        {% if error %}
                            <div class="bg-red-50 border-l-4 border-red-400 p-4 rounded" role="alert">
                                <p class="text-red-700">{{ error.messageKey|trans(error.messageData, 'security') }}</p>
                            </div>
                        {% endif %}

                        <div class="mb-6">
                            <label for="inputEmail" class="block text-lg font-medium text-primary-700 mb-2">Email</label>
                            <div class="relative">
                                <input type="email" value="{{ last_username }}" name="_username" id="inputEmail" class="block w-full border border-primary-200 rounded-md shadow-sm py-3 px-4 focus:outline-none focus:ring-primary-500 focus:border-primary-500" autocomplete="email" required autofocus placeholder="Votre adresse email">
                                <div class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary-400" viewBox="0 0 20 20" fill="currentColor">
                                        <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z" />
                                        <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z" />
                                    </svg>
                                </div>
                            </div>
                        </div>

                        <div class="mb-6">
                            <label for="inputPassword" class="block text-lg font-medium text-primary-700 mb-2">Mot de passe</label>
                            <div class="relative">
                                <input type="password" name="_password" id="inputPassword" class="block w-full border border-primary-200 rounded-md shadow-sm py-3 px-4 focus:outline-none focus:ring-primary-500 focus:border-primary-500" autocomplete="current-password" required placeholder="Votre mot de passe">
                                <div class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary-400" viewBox="0 0 20 20" fill="currentColor">
                                        <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
                                    </svg>
                                </div>
                            </div>
                        </div>

                        <div class="flex items-center mb-6">
                            <input type="checkbox" id="rememberMe" name="_remember_me" class="h-5 w-5 text-primary-600 focus:ring-primary-500 border-primary-300 rounded">
                            <label for="rememberMe" class="ml-2 block text-primary-700">Se souvenir de moi</label>
                        </div>

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        <div>
                            <button type="submit" class="w-full flex justify-center py-3 px-4 border border-transparent rounded-md shadow-md text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 text-lg font-medium">
                                Se connecter
                            </button>
                        </div>
                        
                        <div class="relative mt-6">
                            <div class="absolute inset-0 flex items-center">
                                <div class="w-full border-t border-primary-200"></div>
                            </div>
                            <div class="relative flex justify-center text-sm">
                                <span class="px-2 bg-white text-primary-500">Ou</span>
                            </div>
                        </div>
                        
                        <div class="mt-6">
                            <a href="{{ path('connect_google') }}" class="w-full flex items-center justify-center py-3 px-4 border border-gray-300 rounded-md shadow-sm bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 text-lg font-medium">
                                <svg class="h-5 w-5 mr-2" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                                    <g transform="matrix(1, 0, 0, 1, 27.009001, -39.238998)">
                                        <path fill="#4285F4" d="M -3.264 51.509 C -3.264 50.719 -3.334 49.969 -3.454 49.239 L -14.754 49.239 L -14.754 53.749 L -8.284 53.749 C -8.574 55.229 -9.424 56.479 -10.684 57.329 L -10.684 60.329 L -6.824 60.329 C -4.564 58.239 -3.264 55.159 -3.264 51.509 Z" />
                                        <path fill="#34A853" d="M -14.754 63.239 C -11.514 63.239 -8.804 62.159 -6.824 60.329 L -10.684 57.329 C -11.764 58.049 -13.134 58.489 -14.754 58.489 C -17.884 58.489 -20.534 56.379 -21.484 53.529 L -25.464 53.529 L -25.464 56.619 C -23.494 60.539 -19.444 63.239 -14.754 63.239 Z" />
                                        <path fill="#FBBC05" d="M -21.484 53.529 C -21.734 52.809 -21.864 52.039 -21.864 51.239 C -21.864 50.439 -21.724 49.669 -21.484 48.949 L -21.484 45.859 L -25.464 45.859 C -26.284 47.479 -26.754 49.299 -26.754 51.239 C -26.754 53.179 -26.284 54.999 -25.464 56.619 L -21.484 53.529 Z" />
                                        <path fill="#EA4335" d="M -14.754 43.989 C -12.984 43.989 -11.404 44.599 -10.154 45.789 L -6.734 42.369 C -8.804 40.429 -11.514 39.239 -14.754 39.239 C -19.444 39.239 -23.494 41.939 -25.464 45.859 L -21.484 48.949 C -20.534 46.099 -17.884 43.989 -14.754 43.989 Z" />
                                    </g>
                                </svg>
                                Se connecter avec Google
                            </a>
                        </div>
                    </form>
                    
                    <div class="mt-6 text-center">
                        <a href="#" class="font-medium text-primary-600 hover:text-primary-500">Mot de passe oublié ?</a>
                    </div>
                    
                    <div class="mt-8 relative">
                        <div class="absolute inset-0 flex items-center">
                            <div class="w-full border-t border-primary-200"></div>
                        </div>
                        <div class="relative flex justify-center text-sm">
                            <span class="px-2 bg-white text-primary-500">Pas encore de compte ?</span>
                        </div>
                    </div>
                    
                    <div class="mt-6 grid grid-cols-2 gap-4">
                        <a href="{{ path('app_register_client') }}" class="flex justify-center py-3 px-4 border border-primary-300 rounded-md shadow-sm font-medium text-primary-700 bg-white hover:bg-primary-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500">
                            Client
                        </a>
                        <a href="{{ path('app_register_hotelier') }}" class="flex justify-center py-3 px-4 border border-primary-300 rounded-md shadow-sm font-medium text-primary-700 bg-white hover:bg-primary-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500">
                            Hôtelier
                        </a>
                    </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
