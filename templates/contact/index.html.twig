{% extends 'base.html.twig' %}

{% block title %}Contactez-nous{% endblock %}

{% block body %}
<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="text-center mb-10">
        <h1 class="text-3xl font-extrabold text-gray-900 sm:text-4xl">
            Contactez-nous
        </h1>
        <p class="mt-4 text-lg text-gray-600">
            Vous avez une question ou besoin d'assistance ? N'hésitez pas à nous contacter.
        </p>
    </div>

    <div class="bg-white shadow-lg rounded-lg overflow-hidden">
        <div class="p-8">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="mb-6 p-4 rounded-md {% if label == 'success' %}bg-green-50 text-green-700{% else %}bg-red-50 text-red-700{% endif %}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}

            {{ form_start(form) }}
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                    <div>
                        <label for="{{ form.nom.vars.id }}" class="block text-sm font-medium text-gray-700 mb-1">{{ form.nom.vars.label }}</label>
                        {{ form_widget(form.nom) }}
                        {{ form_errors(form.nom, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                    </div>
                    <div>
                        <label for="{{ form.email.vars.id }}" class="block text-sm font-medium text-gray-700 mb-1">{{ form.email.vars.label }}</label>
                        {{ form_widget(form.email) }}
                        {{ form_errors(form.email, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                    </div>
                </div>

                <div class="mb-6">
                    <label for="{{ form.sujet.vars.id }}" class="block text-sm font-medium text-gray-700 mb-1">{{ form.sujet.vars.label }}</label>
                    {{ form_widget(form.sujet) }}
                    {{ form_errors(form.sujet, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                </div>

                <div class="mb-6">
                    <label for="{{ form.message.vars.id }}" class="block text-sm font-medium text-gray-700 mb-1">{{ form.message.vars.label }}</label>
                    {{ form_widget(form.message) }}
                    {{ form_errors(form.message, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
                </div>

                <div class="mt-8">
                    {{ form_widget(form.envoyer) }}
                </div>
            {{ form_end(form) }}
        </div>
    </div>

    <div class="mt-12 grid grid-cols-1 md:grid-cols-2 gap-8">
        <div class="bg-white p-6 rounded-lg shadow-md">
            <div class="flex items-center mb-4">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-emerald-500 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
                <h3 class="text-lg font-medium text-gray-900">Email</h3>
            </div>
            <p class="text-gray-600">contact@matchroom.fr</p>
        </div>

        <div class="bg-white p-6 rounded-lg shadow-md">
            <div class="flex items-center mb-4">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-emerald-500 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
                <h3 class="text-lg font-medium text-gray-900">Téléphone</h3>
            </div>
            <p class="text-gray-600">+33 1 23 45 67 89</p>
        </div>
    </div>
</div>
{% endblock %}
