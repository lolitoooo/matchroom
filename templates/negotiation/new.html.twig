{% extends 'base.html.twig' %}

{% block title %}Faire une offre - MatchRoom{% endblock %}

{% block body %}
<div class="min-h-screen flex flex-col">
    {% include 'partials/_navbar.html.twig' %}

    <div class="container mx-auto px-4 py-10">
        <div class="max-w-3xl mx-auto bg-white rounded-lg shadow-md overflow-hidden">
            <div class="bg-primary-500 text-white p-6">
                <h2 class="text-2xl font-serif font-bold">Faire une offre pour la chambre « {{ room.name }} »</h2>
            </div>

            <div class="p-6 space-y-4">
                <div class="text-sm text-primary-700">
                    <p><strong>Dates :</strong> {{ startDate|date('d/m/Y') }} → {{ endDate|date('d/m/Y') }}</p>
                    <p><strong>Durée :</strong> {{ nights }} nuit{{ nights > 1 ? 's' : '' }}</p>
                    <p><strong>Prix par nuit :</strong> {{ basePrice }} €</p>
                    <p><strong>Total de base :</strong> <span class="font-semibold">{{ total }} €</span></p>
                </div>

                <form method="post" class="space-y-6">
                    <div>
                        <label for="proposed_price" class="block text-sm font-medium text-primary-700 mb-1">Votre proposition (€)</label>
                        <input type="number" step="0.01" name="proposed_price" id="proposed_price" required
                               class="w-full border border-primary-200 rounded px-4 py-2 focus:outline-none focus:ring-2 focus:ring-primary-500"
                               placeholder="Ex: 150.00">
                    </div>

                    <div>
                        <button type="submit" class="bg-primary-600 hover:bg-primary-700 text-white px-6 py-3 rounded-md font-medium text-sm transition duration-150 ease-in-out">
                            Envoyer l'offre
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}
